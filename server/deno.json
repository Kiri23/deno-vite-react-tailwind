{
  "name": "vite-react-app-server",
  "version": "1.0.0",
  "description": "Server for Vite React App using Kiri Web Framework",
  
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --unstable-kv --watch server.ts",
    "start": "deno run --allow-net --allow-read --allow-env --unstable-kv server.ts",
    "test": "deno test --allow-net --allow-read --allow-env",
    "build": "deno compile --allow-net --allow-read --allow-env --unstable-kv --output server-bin server.ts"
  },

  "imports": {
    "kiriWebFramework": "./lib/kiriWebFramework/mod.ts",
    "kv": "jsr:@deno/kv"
  },
  
  "compilerOptions": {
    "lib": ["deno.unstable", "deno.window"],
    "strict": true,
    "allowJs": true
  },
  
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  
  "fmt": {
    "files": {
      "include": ["**/*.ts", "**/*.js", "**/*.json"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false
    }
  },
  "unstable": ["kv"]
} 